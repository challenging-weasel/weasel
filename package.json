{
  "name": "nextjs-starter",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "dev": "concurrently --names Next,GraphQL -c bgBlue.bold,bgCyan.bold 'next dev' \"rover dev --url ${NEXT_PUBLIC_SUPABASE_URL} --name main --elv2-license accept\" ",
    "build": "next build",
    "start": "next start -p ${PORT:-8080}",
    "lint": "next lint",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "gen:sb": "cat lib/supabase/typegen-prefix.txt > lib/supabase/generated/supabase-types.ts && supabase gen types typescript --local >> lib/supabase/generated/supabase-types.ts && prettier --write lib/supabase/generated/supabase-types.ts",
    "gen:sb-graphql": "graphql-codegen --config lib/supabase/graphql-typegen-config.js",
    "gen": "concurrently --names js,GraphQL -c bgBlue.bold,bgCyan.bold 'pnpm gen:sb' 'pnpm gen:sb-graphql'",
    "sb-diff": "supabase db diff --use-migra -f",
    "sb-push": "supabase db push"
  },
  "dependencies": {
    "daisyui": "^2.41.0",
    "graphql": "^16.6.0",
    "next": "13.0.7",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.7",
    "@graphql-codegen/add": "^3.2.3",
    "@graphql-codegen/cli": "^2.16.1",
    "@graphql-codegen/introspection": "^2.2.3",
    "@graphql-codegen/typescript": "^2.8.5",
    "@graphql-codegen/typescript-operations": "^2.5.10",
    "@testing-library/dom": "^8.19.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/node": "18.11.17",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.9",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@vitejs/plugin-react": "^3.0.0",
    "autoprefixer": "^10.4.13",
    "concurrently": "^7.6.0",
    "eslint": "8.30.0",
    "eslint-config-next": "13.0.7",
    "eslint-config-sznm": "^1.0.2",
    "jsdom": "^20.0.3",
    "postcss": "^8.4.19",
    "prettier": "^2.8.1",
    "tailwindcss": "^3.2.4",
    "ts-node": "^10.9.1",
    "typescript": "4.9.4",
    "vite": "^4.0.3",
    "vitest": "^0.26.2"
  }
}
